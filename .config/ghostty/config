# Map specific Unicode codepoint U+23F5 (‚èµ) to Cascadia Code
# This character is used by Claude Code for UI elements like "accept edits"
# Cascadia Code is installed via install.sh
font-codepoint-map = "U+23F5=Cascadia Code"

