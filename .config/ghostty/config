# ============================================================================
# Terminal Configuration
# ============================================================================
# Use Ghostty's native TERM for better compatibility
term = xterm-ghostty

# Try legacy width method for better compatibility with some apps
grapheme-width-method = legacy

# ============================================================================
# Shell Integration
# ============================================================================
shell-integration = "bash"
# Enhanced shell integration features:
# - cursor: marks command boundaries for navigation
# - sudo: detects elevated privileges
# - title: updates window title with current directory/command
shell-integration-features = cursor,sudo,title

# ============================================================================
# Font Configuration
# ============================================================================
font-family = "JetBrainsMono Nerd Font"
